// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
   "agent_servers": {
      "kimi": {
         "type": "registry"
      }
   },
   "context_servers": {
      "mcp-server-context7": {
         "enabled": true,
         "settings": {
            "context7_api_key": "https://context7.com/api/v2"
         }
      }
   },
   "debugger": {
      "dock": "left"
   },
   "git_panel": {
      "dock": "right"
   },
   "collaboration_panel": {
      "dock": "right"
   },
   "outline_panel": {
      "dock": "right"
   },
   "project_panel": {
      "dock": "right"
   },
   "soft_wrap": "editor_width",
   "tab_size": 3,
   "relative_line_numbers": "enabled",
   "scroll_beyond_last_line": "vertical_scroll_margin",
   "title_bar": {
      "show_branch_icon": true
   },
   "autoscroll_on_clicks": true,
   "audio": {
      "experimental.auto_microphone_volume": true,
      "experimental.rodio_audio": true
   },
   "agent": {
      "default_profile": "ask",
      "model_parameters": []
   },
   "terminal": {
      "dock": "bottom",
      "shell": {
         "program": "zsh"
      },
      "font_family": "Helvetica"
   },
   "base_keymap": "VSCode",
   "cursor_blink": true,
   "autosave": {
      "after_delay": {
         "milliseconds": 300
      }
   },
   "buffer_font_family": "Arial",
   "icon_theme": "Zed (Default)",
   "ui_font_size": 20.0,
   "buffer_font_size": 24.0,
   "theme": {
      "mode": "dark",
      "light": "Kanagawa Lotus",
      "dark": "Kanagawa Dragon"
   },
   "languages": {
      "Nix": {
         "language_servers": ["nixd"],
         "formatter": {
            "external": {
               "command": "nixpkgs-fmt",
               "arguments": ["--stdin"]
            }
         }
      }
   },
   "lsp": {
      "nixd": {
         "binary": {}
      }
   }
}
